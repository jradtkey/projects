<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Home</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <style media="screen">
      .wrapper{
        padding: 3% 5% 3% 5%;
      }
      h1{
        font-size: 3.5em;
      }
    </style>
  </head>
  <body>
    <div class="wrapper">
      <div class="row">
        <div class="col-sm-12 col-md-12 col-lg-12">
          <h1>Mongoose App</h1>
        </div>
      </div><br>

      <a href="/new" class="btn btn-primary" role="button">Create New Mongoose Animal</a>

      <div class="row">
        <div class="col-sm-8 col-md-8 col-lg-8">
          <% data.forEach(function(data) { %>
            <h3>Mongoose Animal: <%= data.name %></h3>
            <p>Added at <%= data.updated_at %></p>
            <a href="/mongooses/<%= data.id %>" class="btn btn-info" role="button">Show Mongoose Animal</a>
            <a href="/mongooses/edit/<%= data.id %>" class="btn btn-warning" role="button">Edit Mongoose Animal</a>
            <a href="/mongooses/destroy/<%= data.id %>" class="btn btn-danger" role="button">Delete Mongoose Animal</a>
            <hr>
          <% }); %>
        </div>
      </div>
    </div>
  </body>
</html>
